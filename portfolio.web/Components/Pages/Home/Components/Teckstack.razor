<div class="h-20 w-20 flex items-center flex flex-col justify-center gap-2 rounded-md bg-white p-2 shadow-md">
    <img src="@SRC" class="white-img h-auto w-9 my-auto" alt="@Label">
    <p class="font-bold">
        @Label
    </p>
</div>

@code{
    [Parameter]
    public string SRC { get; set; } = String.Empty;
    [Parameter]
    public string Label { get; set; } = String.Empty;
}